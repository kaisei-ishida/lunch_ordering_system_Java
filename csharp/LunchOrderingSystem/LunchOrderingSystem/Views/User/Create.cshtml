@model LunchOrderingSystem.Models.m_user

@{
    ViewBag.Title = "ユーザ管理画面";
}

<script>
jQuery(function($) {
	jQuery("#multiSelectSample1").multiselect({
		selectedList: 100,
		checkAllText: "全選択",
		uncheckAllText: "全選択解除",
		noneSelectedText: "未選択です",
		selectedText: "# 個選択"
	});
});

    close: function() {
        var multiSelectSample1 = jQuery("#multiSelectSample1 option:selected");
        for (i = 0, len = multiSelectSample1.length; i < len; i++) {
            alert(multiSelectSample1[i].text);
            alert(multiSelectSample1[i].value);
        }
    }
</script>


<h2>ユーザ管理画面</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ユーザの新規登録</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="login_id">ID</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.login_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.login_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="login_password">パスワード</label>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.login_password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.login_password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="role">権限</label>
            <div class="col-md-10">
                <input type="checkbox" name="roles" value="Users"> Users<br>
                <input type="checkbox" name="roles" value="Vendors"> Vendors<br>
                <input type="checkbox" name="roles" value="PublicTerminals"> PublicTerminals<br>
                <input type="checkbox" name="roles" value="Administrators"> Administrators<br>
                <input type="checkbox" name="roles" value="Collectors"> Collectors<br>
                @*@Html.EditorFor(model => model.role, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="name">名前</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
